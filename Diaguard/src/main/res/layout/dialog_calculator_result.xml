<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/Padding">

    <TextView android:id="@+id/dialog_calculator_result_formula"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_between"/>

    <TextView android:id="@+id/dialog_calculator_result_formula_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_between"
        android:textColor="@android:color/black"/>

    <TextView android:id="@+id/textViewInfo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/bolus_no1"
        android:textColor="@android:color/black"
        android:visibility="gone"/>

    <LinearLayout android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView android:id="@+id/textViewResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="28sp"
            android:textColor="@android:color/black"/>

        <TextView android:id="@+id/textViewUnit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_between"
            android:layout_marginStart="@dimen/margin_between"
            android:textColor="@android:color/black"/>

        </LinearLayout>

</LinearLayout>