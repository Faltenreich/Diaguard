<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_element"
    android:gravity="center"
    android:orientation="horizontal">

    <com.faltenreich.diaguard.ui.view.TintImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/list_item_chart_table_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_between"
        app:tintColor="@color/green" />

    <LinearLayout
        android:id="@+id/list_item_chart_table_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" />

</LinearLayout>