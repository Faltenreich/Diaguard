<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginLeft="@dimen/margin_between_larger"
    android:layout_marginStart="@dimen/margin_between_larger"
    android:layout_marginRight="@dimen/margin_between_larger"
    android:layout_marginEnd="@dimen/margin_between_larger"
    android:layout_marginBottom="@dimen/margin_between">

    <TextView
        android:id="@+id/list_item_time_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"/>

    <com.faltenreich.diaguard.ui.view.LocalizedNumberEditText
        android:id="@+id/list_item_time_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:inputType="numberDecimal" />

</LinearLayout>