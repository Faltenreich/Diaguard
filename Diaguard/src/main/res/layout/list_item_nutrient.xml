<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    style="@style/Padding"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_element"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/list_item_nutrient_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        tools:text="Nutrient"/>

    <TextView
        android:id="@+id/list_item_nutrient_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_between"
        android:layout_marginLeft="@dimen/margin_between"
        android:textColor="?android:attr/textColorPrimary"
        tools:text="10 g"/>

</LinearLayout>