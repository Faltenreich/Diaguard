<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="?android:listDivider"
        android:orientation="vertical"
        android:showDividers="middle">

        <LinearLayout
            style="@style/LayoutRow"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                style="@style/LayoutRowImageMultiline"
                android:contentDescription="@null"
                android:src="@drawable/ic_business"
                app:tint="?iconColorPrimary" />

            <TextView
                android:id="@+id/brand_label"
                style="@style/LayoutRowItemMultiline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="?android:attr/textColorPrimary"
                tools:text="@tools:sample/lorem" />

        </LinearLayout>

        <LinearLayout style="@style/LayoutRow">

            <ImageView
                style="@style/LayoutRowImageMultiline"
                android:contentDescription="@null"
                android:src="@drawable/ic_note"
                app:tint="?iconColorPrimary" />

            <TextView
                android:id="@+id/ingredients_label"
                style="@style/LayoutRowItemMultiline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="?android:attr/textColorPrimary"
                tools:text="@tools:sample/lorem/random" />

        </LinearLayout>

        <LinearLayout style="@style/LayoutRow">

            <ImageView
                style="@style/LayoutRowImage"
                android:contentDescription="@null"
                android:src="@drawable/ic_category_meal"
                app:tint="?iconColorPrimary" />

            <TextView
                android:id="@+id/value_label"
                style="@style/LayoutRowItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="?android:attr/textColorPrimary" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/labels_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_between"
            android:layout_marginBottom="@dimen/margin_between"
            android:orientation="vertical" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
