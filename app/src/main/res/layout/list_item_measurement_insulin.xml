<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:divider="?android:listDivider"
    android:orientation="vertical"
    android:showDividers="middle">

    <com.faltenreich.diaguard.shared.view.edittext.StickyHintInputView
        android:id="@+id/bolus_input_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/bolus"
        android:inputType="numberDecimal"
        android:paddingStart="@dimen/margin_between"
        android:paddingLeft="@dimen/margin_between"
        android:paddingTop="@dimen/padding"
        android:paddingEnd="@dimen/margin_between"
        android:paddingRight="@dimen/margin_between"
        android:paddingBottom="@dimen/margin_between"
        app:startIconDrawable="@drawable/ic_category_insulin" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="?android:listDivider"
        android:orientation="horizontal"
        android:showDividers="middle"
        tools:ignore="RtlSymmetry">

        <!-- FIXME: Move to basal_input_field on forward -->
        <com.faltenreich.diaguard.shared.view.edittext.StickyHintInputView
            android:id="@+id/correction_input_field"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/correction"
            android:inputType="numberDecimal|numberSigned"
            android:paddingStart="@dimen/text_input_layout_start_drawable_width"
            android:paddingLeft="@dimen/margin_between"
            android:paddingTop="@dimen/padding"
            android:paddingBottom="@dimen/margin_between" />

        <com.faltenreich.diaguard.shared.view.edittext.StickyHintInputView
            android:id="@+id/basal_input_field"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/basal"
            android:inputType="numberDecimal"
            android:paddingTop="@dimen/padding"
            android:paddingEnd="@dimen/margin_between"
            android:paddingRight="@dimen/margin_between"
            android:paddingBottom="@dimen/margin_between" />

    </LinearLayout>

</LinearLayout>