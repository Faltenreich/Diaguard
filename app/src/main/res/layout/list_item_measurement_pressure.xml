<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:divider="?android:listDivider"
    android:orientation="horizontal"
    android:showDividers="middle"
    tools:ignore="RtlSymmetry">

    <com.faltenreich.diaguard.shared.view.edittext.StickyHintInputView
        android:id="@+id/systolic_input_field"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="@string/systolic"
        android:inputType="numberDecimal"
        android:paddingStart="@dimen/margin_between"
        android:paddingLeft="@dimen/margin_between"
        android:paddingTop="@dimen/padding"
        android:paddingBottom="@dimen/margin_between"
        app:startIconDrawable="@drawable/ic_category_pressure" />

    <com.faltenreich.diaguard.shared.view.edittext.StickyHintInputView
        android:id="@+id/diastolic_input_field"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="@string/diastolic"
        android:inputType="numberDecimal"
        android:paddingTop="@dimen/padding"
        android:paddingEnd="@dimen/margin_between"
        android:paddingRight="@dimen/margin_between"
        android:paddingBottom="@dimen/margin_between" />

</LinearLayout>